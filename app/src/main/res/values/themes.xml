<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.MetaBookID" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/background_primary</item>
        <item name="colorOnPrimary">@color/background_primary</item>
        <item name="colorPrimaryContainer">@color/background_secondary</item>
        <item name="android:colorBackground">@color/background_secondary</item>
        <item name="colorOnBackground">@color/background_secondary</item>

    </style>

    <style name="text_head" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/fourth_bg</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_subhead" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mytext" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/background_dark</item>
    </style>

    <style name="mytextfield" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/fourth_bg</item>
    </style>

    <style name="mybutton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:backgroundTint">@color/fourth_bg</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:textColor">#FFF6E9</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="myquotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/alex_brush</item>
        <item name="android:textColor">@color/background_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CollapseToolbarTheme">
        <item name="android:background">@color/background_secondary</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_favorite</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>


    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:editTextColor">@color/background_primary</item>
        <item name="tint">@color/background_primary</item>
        <item name="android:textColorHint">@color/background_primary</item>
        <item name="android:textCursorDrawable">@drawable/cursor_text_color</item>
    </style>

    <style name="favoriteButton">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="Base.Theme.MetaBookID.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MetaBookID.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/background_primary</item>
    </style>

    <style name="Theme.MetaBookID.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>